{
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "Input.ChoiceSet",
      "id": "Schedule",
      "value": "${Schedule}",
      "style": "compact",
      "isMultiSelect": false,
      "choices": [
        {
          "title": "なし",
          "value": "-1"
        },
        {
          "title": "5 分ごと",
          "value": "5"
        },
        {
          "title": "10 分ごと",
          "value": "10"
        },
        {
          "title": "15 分ごと",
          "value": "15"
        },
        {
          "title": "30 分ごと",
          "value": "30"
        },
        {
          "title": "60 分ごと",
          "value": "60"
        }
      ],
      "placeholder": "通知を繰り返す間隔",
      "label": "スケジュール"
    },
    {
      "type": "Input.Text",
      "id": "Message",
      "placeholder": "会議中に表示されるメッセージ",
      "value": "${Message}",
      "isMultiline": true,
      "label": "メッセージ"
    },
    {
      "type": "Input.Text",
      "id": "Url",
      "placeholder": "会議中に表示されるリンクの URL",
      "value": "${Url}",
      "style": "url",
      "label": "URL"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "id": "Submit",
      "data": {
        "Button": "Submit"
      },
      "title": "保存"
    },
    {
      "type": "Action.Submit",
      "id": "Cancel",
      "data": {
        "Button": "Cancel"
      },
      "title": "キャンセル"
    }
  ]
}
